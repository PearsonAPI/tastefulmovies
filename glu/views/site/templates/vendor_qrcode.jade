!!! html
head
  title QR code: #{vendor_alias}
  style
    html, body {
      height:100%;
      margin:0;
      padding:0;
    }

    .wrapper {
      display:table;
      width:100%;
      height:100%;
      margin:0 auto;
      padding:0;
    }

    .wrapper div {
      display:table-cell;
      margin:0;
      text-align:center;
      vertical-align:middle;
    }

    .wrapper div p {
      font-family:sans-serif;
    }
body
  div.wrapper
    div
      p
        img(src=url_for('static', filename='images/qr_codes/#{vendor_id}.png'))
      p #{vendor_alias}
